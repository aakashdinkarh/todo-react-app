{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "commonjs",
      "target": "ES6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "rootDir": "src",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true
    },
    "exclude": [
      "node_modules",
      "build",
      "scripts",
    ],
    "types": [
      "typePatches"
    ]
  }